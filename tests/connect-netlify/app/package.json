{
  "name": "todo-netlify",
  "version": "1.0.0",
  "description": "test app",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-server": "mkdir -p netlify/edge-functions && cp ../../../src/netlify/server.ts netlify/edge-functions/fireproof.ts",
    "watch-server": "chokidar \"../../../src/netlify/server.ts\" -c \"pnpm run copy-server\"",
    "watch": "pnpm run copy-server && pnpm run watch-server &",
    "watch-dev": "pnpm run watch & pnpm run dev",
    "predev": "pnpm run copy-server",
    "dev": "pnpm --package=netlify-cli dlx netlify --version && pnpm --package=netlify-cli dlx netlify dev --no-open --debug"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@netlify/blobs": "^8.1.0"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0"
  }
}
