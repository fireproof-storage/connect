{
  "name": "@fireproof/connector",
  "version": "1.0.0",
  "private": true,
  "description": "Live database connector for the web",
  "type": "module",
  "scripts": {
    "prepublish": "pnpm run build",
    "publish": "pnpm run '/publish:/'",
    "publish:aws": "tsx ./publish-package.ts ./dist/aws/package.json",
    "publish:cloud": "tsx ./publish-package.ts ./dist/cloud/package.json",
    "publish:netlify": "tsx ./publish-package.ts ./dist/netlify/package.json",
    "publish:s3": "tsx ./publish-package.ts ./dist/s3/package.json",
    "publish:partykit": "tsx ./publish-package.ts ./dist/partykit/package.json",
    "publish:ucan": "tsx ./publish-package.ts ./dist/ucan-cloud/package.json",
    "prebuild": "rm -rf dist",
    "prepare": "pnpm run build",
    "build": "pnpm run '/^build:/' && pnpm run '/^pub:/'",
    "build:tsc": "tsc",
    "build:tsup": "tsup",
    "pub:noop": "echo",
    "pub:aws": "tsx ./version-copy-package.ts ./dist/aws/package-aws.json && cp ./src/aws/README.md ./dist/aws/",
    "pub:cloud": "tsx ./version-copy-package.ts ./dist/cloud/package-cloud.json && cp ./src/cloud/README.md ./dist/cloud/",
    "pub:netlify": "tsx ./version-copy-package.ts ./dist/netlify/package-netlify.json && cp ./src/netlify/server.ts ./dist/netlify/ && cp ./src/netlify/README.md ./dist/netlify/",
    "pub:s3": "tsx ./version-copy-package.ts ./dist/s3/package-s3.json && cp ./src/s3/README.md ./dist/s3/",
    "pub:partykit": "tsx ./version-copy-package.ts ./dist/partykit/package-partykit.json && cp ./src/partykit/server.ts ./dist/partykit/ && cp ./src/partykit/README.md ./dist/partykit/",
    "pub:ucan": "tsx ./version-copy-package.ts ./dist/ucan-cloud/package-ucan.json",
    "presmoke": "pnpm run build",
    "xsmoke": "pnpm run '/smoke:/'",
    "presmoke:node": "cd dist/fireproof-core ; pnpm pack",
    "smoke:node": "sh smoke/it.sh",
    "presmoke:browser": "cd dist/use-fireproof ; pnpm pack",
    "smoke:browser": "sh smoke/react/it.sh",
    "clean": "rm -rf node_modules dist",
    "prepare-s3-test": "docker run -d -p 9000:9000 --name minio -e MINIO_ACCESS_KEY=minioadmin -e MINIO_SECRET_KEY=minioadmin -v /tmp/data:/data -v /tmp/config:/root/.minio minio/minio server /data",
    "setup-gateway-servers": "pnpm run '/^pretest:/'",
    "pretest:partykit": "cd tests/connect-partykit/app && pnpm run dev",
    "pretest:netlify": "cd tests/connect-netlify/app && pnpm run copy-server && pnpm --package=netlify-cli dlx netlify dev --no-open",
    "test-gateways": "vitest --run connector gateway",
    "test": "vitest --run",
    "stop-s3-test": "docker rm -f minio",
    "format": "prettier .",
    "lint": "eslint"
  },
  "exports": {
    "./ucan": {
      "require": "./dist/ucan-cloud/index.cjs",
      "types": "./dist/ucan-cloud/index.d.ts",
      "default": "./dist/ucan-cloud/index.js"
    }
  },
  "keywords": [
    "database",
    "JSON",
    "immutable",
    "IPLD",
    "CID",
    "UCAN"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers",
    "Meno Abels"
  ],
  "license": "Apache-2.0 OR MIT",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@smithy/types": "^3.3.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.4",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/typescript-estree": "^8.4.0",
    "@web3-storage/access": "^20.0.1",
    "esbuild": "^0.23.1",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "esbuild-plugin-replace": "^1.4.0",
    "esbuild-plugin-resolve": "^2.0.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "semver": "^7.6.3",
    "std-env": "^3.7.0",
    "tsup": "^8.2.4",
    "tsx": "^4.15.6",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5",
    "wrangler": "^3.65.1",
    "zx": "^8.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireproof-storage/connector.git"
  },
  "bugs": {
    "url": "https://github.com/fireproof-storage/connector/issues"
  },
  "homepage": "https://github.com/fireproof-storage/connector#readme",
  "dependencies": {
    "@adviser/cement": "^0.2.34",
    "@aws-sdk/client-s3": "^3.614.0",
    "@fireproof/core": "0.19.111",
    "@ipld/dag-cbor": "^9.2.1",
    "@jspm/core": "^2.1.0",
    "@netlify/blobs": "^8.1.0",
    "@ucanto/client": "^9.0.1",
    "@ucanto/core": "^10.0.1",
    "@ucanto/interface": "^10.0.1",
    "@ucanto/principal": "^9.0.1",
    "@ucanto/transport": "^9.1.1",
    "@ucanto/validator": "^9.0.2",
    "@web3-storage/capabilities": "^17.3.0",
    "@web3-storage/clock": "^0.4.1",
    "@web3-storage/did-mailto": "^2.1.0",
    "@web3-storage/pail": "^0.6.0",
    "@web3-storage/w3up-client": "^15.0.0",
    "assert": "^2.1.0",
    "better-sqlite3": "^11.2.1",
    "cborg": "^4.2.3",
    "cross-fetch": "^4.0.0",
    "events": "^3.3.0",
    "idb-keyval": "^6.2.1",
    "is-deep-strict-equal-x": "^1.1.2",
    "multiformats": "^13.3.0",
    "node-sqlite3-wasm": "^0.8.18",
    "partykit": "^0.0.110",
    "partysocket": "^1.0.2",
    "path": "^0.12.7",
    "util": "^0.12.5",
    "ws": "^8.18.0"
  }
}
